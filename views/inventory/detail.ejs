
<%# Content for the vehicle detail view %>
<%- title %>
<%- detail %>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<%- reviewsHTML %>

<% if (locals.loggedin) { %>
    <form id="reviewForm" action="/inv/add-review" method="post">
        <h3>Add a Review</h3>
        <label for="review_text">Your Review:</label>
        <textarea id="review_text" name="review_text" rows="4" required></textarea>
        <input type="hidden" name="inv_id" value="<%= inv_id %>">
        <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
        <button type="submit">Submit Review</button>
    </form>
<% } else { %>
    <p>Please <a href="/account/login">log in</a> to write a review.</p>
<% } %>
